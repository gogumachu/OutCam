<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#ffffff"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:titleTextColor="#000000">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:gravity="center"
            android:src="@drawable/ic_appicon_56" />

        <TextView
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:text="로그인하기"
            android:textSize="18sp"
            android:textColor="#ff4b4b" />

        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@drawable/ic_close_black_24dp" />

    </android.support.v7.widget.Toolbar>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:paddingLeft="18dp"
            android:paddingTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:background="#f2f4f7"
            android:textColor="#949494"
            android:textSize="13sp"
            android:text="앱 설정" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="17dp"
                android:textColor="#393939"
                android:text="즐겨찾기 관리"
                />
            <ImageView
                android:layout_marginTop="17dp"
                android:src="@drawable/ic_arrowlineright_fix_24"
                android:layout_width="18dp"
                android:layout_height="18dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="17dp"
                android:textColor="#393939"
                android:text="앱 실행 시 현 위치 검색"
                />
            <ImageView
                android:layout_marginTop="17dp"
                android:src="@drawable/ic_arrowlineright_fix_24"
                android:layout_width="18dp"
                android:layout_height="18dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="17dp"
                android:textColor="#393939"
                android:text="변경 알림 설정"
                />
            <ImageView
                android:layout_marginTop="17dp"
                android:src="@drawable/ic_arrowlineright_fix_24"
                android:layout_width="18dp"
                android:layout_height="18dp" />

        </LinearLayout>

        <TextView
            android:paddingLeft="18dp"
            android:paddingTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:background="#f2f4f7"
            android:textColor="#949494"
            android:textSize="13sp"
            android:text="앱 정보" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="17dp"
                android:textColor="#393939"
                android:text="공지사항"
                />
            <ImageView
                android:layout_marginTop="17dp"
                android:src="@drawable/ic_arrowlineright_fix_24"
                android:layout_width="18dp"
                android:layout_height="18dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="17dp"
                android:textColor="#393939"
                android:text="약관 및 정책"
                />
            <ImageView
                android:layout_marginTop="17dp"
                android:src="@drawable/ic_arrowlineright_fix_24"
                android:layout_width="18dp"
                android:layout_height="18dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="17dp"
                android:textColor="#393939"
                android:text="문의하기"
                />
            <ImageView
                android:layout_marginTop="17dp"
                android:src="@drawable/ic_arrowlineright_fix_24"
                android:layout_width="18dp"
                android:layout_height="18dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:orientation="vertical">
            <TextView
                android:layout_marginLeft="18dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="#949494"
                android:text="Android 0.0.1 Ver"
                />
            <TextView
                android:layout_marginLeft="18dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="9sp"
                android:textColor="#949494"
                android:text="최신: Android 0.0.3 Ver"
                />
        </LinearLayout>


    </LinearLayout>


</LinearLayout>